<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

<body>


	<% if (logueado) { %>
	<%- include('partials/headerLogueado') %>

	<% } else { %>
	<%- include('partials/header') %>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">

				<img src="/images/users/<%= usuario.url %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.usuario %>
						<% if (logueado && miUsuario.id==usuario.id) { %>
							<a href="/users/profile-edit/<%= usuario.id %> ">
								<i class="fas fa-cogs"></i>
							</a>
						<% } %>
					
					</h1>
				</div>
				<br>
				<div>
					<ul class="">
						<li> <%= usuario.productos.length %> productos</li>
						<li> <%= usuario.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>

		<body>
			<br>
			<h3 class="tit-datos"> Contacto:</h3>

			<div class="uk-inline">
				<i class="far fa-envelope"></i>
				<label id="datos" for="">E-mail: <%= usuario.mail %> </label>
			</div>
			<br>
			<div class="uk-inline">
				<i class="far fa-calendar-alt"></i>
				<label id="datos" for="">Fecha de nacimiento: <%= usuario.fecha %> </label>
			</div>


	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% usuario.productos.forEach (element=> { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/<%= element.id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%= element.url %>" alt="producto">
						</figure>
						<article class="product-box_data">
							<h2><%= element.nombre_producto %></h2>
							<p><%= element.descripcion %></p>
							<p>Comentarios:<%= element.comentarios.length %> </p>
						</article>
					</a>
				</section>
			</div>
			<%	}) %>
		</div>

	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>