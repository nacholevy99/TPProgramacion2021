<!DOCTYPE html>
<html lang="en">

<body>
	<%- include('partials/head.ejs') %>

	<%- include('partials/header.ejs') %>
    
<!--Slider-->
	<div id="slider">
		<figure>
			<img class= "foto1" src="images/mundopetsbanner1.jpg">
			<img class= "foto2" src="images/bannershipping.jpg">
			<img class="foto3" src="images/peluchesbanner.jpg">
			
		</figure>
	</div>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% productos.forEach(element => {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos"> 
						<figure class="product-box_image">
							<img src="<%= element.imagen%>" alt="producto">
						</figure>
						<article class="product-box_data">
							<h2><%= element.name %></h2>
							<p><%= element.descripcioncorta %></p>
							<p>Comentarios: 3</p>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% productos.forEach(element => {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos">
						<figure class="product-box_image">
							<img src="<%= element.imagen%>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= element.name %></h2>
							<p><%= element.descripcioncorta%></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /Más comentados -->

     <%- include('partials/footer.ejs') %>
</body>
</html>