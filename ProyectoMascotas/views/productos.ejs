<!DOCTYPE html>
<html lang="en">

<body>
	<%- include('partials/head.ejs') %>

	<%- include('partials/header.ejs') %>       
    <!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product-add"><i class="far fa-heart"></i></a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= imagen%>" alt="" class="product-detail-img">
					<p class="product-detail-description"><%= descripcion%></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
                        <% for (let index = 0; index < 5; index++) { %>
						<article>
							<img src="/images/users/logousuario.png" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/profile">Nombre usuario: </a> </strong>
									Texto del comentario que escribi√≥ el usuario Lorem ipsum dolor sit amet.</p>
							</div>
						</article>
						<% } %>
					</section>
					<form class="form" action="/productos" method="POST" >
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->


     <%- include('partials/footer.ejs') %>
</body>
</html>